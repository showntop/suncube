{{define "section_recent-home/index"}}
    <section class="content"> 
        <!-- tab header -->
        <div class="main-heading">
            <div class="row secBg padding-14">
                <div class="medium-8 small-8 columns">
                    <div class="head-title">
                        <i class="fa fa-film"></i>
                        <h4>Newest Videos</h4>
                    </div>
                </div>
                <div class="medium-4 small-4 columns">
                    <ul class="tabs text-right pull-right" data-tabs="x5vqve-tabs" id="newVideos">
                        <li class="tabs-title is-active" role="presentation"><a href="#new-all" role="tab" aria-controls="new-all" aria-selected="true" id="new-all-label">all</a></li>
                        <li class="tabs-title" role="presentation"><a href="#new-hd" role="tab" aria-controls="new-hd" aria-selected="false" id="new-hd-label">HD</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- end tab header -->
        <div class="row secBg">
            <div class="large-12 columns">
                <!-- panel header -->
                <div class="row column head-text clearfix">
                    <p class="pull-left">All Videos : <span>1,862 Videos posted</span></p>
                    <div class="grid-system pull-right show-for-large">
                        <a class="secondary-button current grid-default" href="#"><i class="fa fa-th"></i></a>
                        <a class="secondary-button grid-medium" href="#"><i class="fa fa-th-large"></i></a>
                        <a class="secondary-button list" href="#"><i class="fa fa-th-list"></i></a>
                    </div>
                </div>
                <!-- end panel header -->
                <!-- panel content -->
                <div class="tabs-content" data-tabs-content="newVideos">
                    <div class="tabs-panel is-active" id="new-all" role="tabpanel" aria-hidden="false" aria-labelledby="new-all-label">
                        <div class="row list-group">
                            {{range .Result.RecentVideos}}
                                {{block "shared/video_card" .}}
                                {{end}}
                            {{end}}
                        </div>
                    </div>
                </div>
                <!-- end panel content -->
                <!-- load more -->
                <div class="text-center row-btn">
                    <a class="button radius" href="all-video.html">View All Video</a>
                </div>
                <!-- end load more -->
            </div>
        </div>
    </section>
{{end}}